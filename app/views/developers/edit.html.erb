<!DOCTYPE html>
<html>
<head>
  <title>Developers</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <h2 class="mt-4 mb-3">Edit Developer</h2>

    <%= form_with(model: @developer, url: developer_path(@developer), method: :patch, class: 'form-container') do |form| %>
    <div class="form-group">
        <%= form.label :last_name, class: 'form-label' %>
        <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :first_name, class: 'form-label' %>
        <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :passport_id, class: 'form-label' %>
        <%= form.text_field :passport_id, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :address, class: 'form-label' %>
        <%= form.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :city, class: 'form-label' %>
        <%= form.text_field :city, class: 'form-control' %>
    </div>

    <div class="form-group">
         <%= form.label :manager, class: 'form-label' %>
        <%= form.collection_select(:manager_id, Manager.all, :id, :full_name, { prompt: 'Select Manager' }, { class: 'form-control' }) %>
    </div>

    <div class="actions mt-3">
        <%= form.submit 'Update Developer', class: 'btn btn-primary' %>
    </div>
    <% end %>
    </div>
</body>
</html>
